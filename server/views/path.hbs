<span id="logged_in" class="hidden">{{logged_in}}</span>
{{#with path}}
<span id="pathURL" class="hidden">{{url}}</span>
<div class="island round dark background center padding relative" style="max-width: 40em; margin-bottom: 1em;" id="path">
  {{#if image_path}}<img src="{{image_path}}" style="width: 15em; height: 12em;">{{/if}}
  <h1 class="padding">{{display_name}}</h1>
  {{#if owned}}
  <div class="absolute" style="top: 1em; right: 1em;">
    <a href="{{url}}/edit"><button type="button" class="border">Edit</button></a>
  </div>
  {{/if}}
  <table class="island fullwidth round background padding" style="max-width: 30em; margin-bottom: 0.5em;">
    <tr>
      <td>Author:</td>
      <td><a href="{{authorURL}}">{{author}}</a></td>
    </tr>
    {{!--
    <tr>
      <td>Contributors:</td>
      <td><a href="#">{{contributors}}</a></td>
    </tr>
    <tr>
      <td>Content #:</td>
      <td><a href="#">{{contentCount}}</a></td>
    </tr>--}}
  </table>
  <button id="follow" type="button" class="border half">Follow</button>
</div>
<div class="center island round dark background padding" style="max-width: 40em; margin-bottom: 1em;">
  <a id="enter" href="{{url}}/0">
    <button type="button" name="button" style="width: 20em;">
      <h1>Enter</h1>
    </button>
  </a>
</div>
{{#if show_description}}{{#if description}}
<div class="island round dark background padding" style="max-width: 40em; margin-bottom: 1em;">
  <h2 class="center padding">Description</h2>
  <div class="round background padding">{{description}}</div>
</div>
{{/if}}{{/if}}
<div class="island round dark background padding" style="max-width: 40em; margin-bottom: 1em;">
  <h2 class="center padding">Reviews</h2>
  <div class="island round background padding"></div>
</div>
<div class="island round dark background padding" style="max-width: 40em;">
  <h2 class="center padding">Comments</h2>
  <div class="island round background padding">
    {{> response_field placeholder="Leave a comment..." background="dark background" action="Post" id="pathcomment" disabled="true"}}
    <div class="fullwidth table">
      <div class="tr">
        <div class="td" style="width: 5em;">
          <!-- <img src="/image_path" alt="username" style="width: 3em; height: 3em"> -->
        </div>
        <div class="td">
          no
        </div>
      </div>
    </div>
  </div>
</div>
{{/with}}
{{> pageJS js="path"}}
